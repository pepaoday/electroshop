@model List<WebBanHang.Models.Product>

@{
    ViewData["Title"] = ViewData["CategoryName"];
}

<style>
    body {
        background-color: #1a1a1a;
        color: #f8f9fa;
    }

    /* Nút màu đỏ tùy chỉnh */
    .btn-custom-red {
        background-color: #d9232d;
        border-color: #d9232d;
        color: white;
    }
    .btn-custom-red:hover {
        background-color: #b01c24;
        border-color: #a51a21;
        color: white;
    }

    /* Thẻ sản phẩm (Tái sử dụng từ trang chủ) */
    .product-card {
        background-color: #2c2c2c;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform .2s ease-in-out, box-shadow .2s ease-in-out;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    }
    .product-card .card-img-top {
        height: 250px;
        object-fit: cover;
    }
    .product-card .card-body { padding: 1.25rem; }
    .product-card .card-title {
        color: #f8f9fa;
        font-weight: 500;
        text-align: center;
    }
    .product-card .text-muted {
        color: #f8f9fa !important; 
        font-size: 0.9rem;
        text-align: center;
    }
    .product-card .price {
        font-size: 1.25rem;
        font-weight: bold;
        text-align: center;
        color: #ffffff;
    }
    .product-card .action-buttons .btn {
        width: 100%;
        margin-bottom: 0.5rem;
    }

    /* Tiêu đề mục */
    .section-title {
        color: white;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
    }
    
    /* Thông báo khi không có sản phẩm */
    .empty-category-alert {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #f8f9fa;
        padding: 2rem;
        border-radius: 15px;
        text-align: center;
        font-size: 1.2rem;
    }
</style>

<div class="container mt-4">
    <h2 class="section-title">
         @ViewData["CategoryName"]
    </h2>

    @if (Model == null || Model.Count == 0)
    {
        <div class="empty-category-alert">
            <i class="bi bi-emoji-frown" style="font-size: 2rem;"></i>
            <p class="mt-3 mb-0">Rất tiếc, không có sản phẩm nào trong danh mục này.</p>
        </div>
        <div class="text-center mt-4">
             <a asp-action="Index" asp-controller="Home" class="btn btn-outline-light">Quay về trang chủ</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card product-card h-100">
                        @if (product.ImageData != null && product.ImageData.Length > 0)
                        {
                            <img src="@Url.Action("GetProductImage", "Admin", new { id = product.Id })" class="card-img-top" alt="@product.Name" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/250" class="card-img-top" alt="Không có ảnh" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small flex-grow-1">@product.Description</p>
                            <p class="price mb-3">@string.Format("{0:N0}₫", product.Price)</p>
                            <div class="action-buttons mt-auto">
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id"
                                   class="btn btn-custom-red">Thêm vào giỏ</a>
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id"
                                   class="btn btn-outline-light">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

