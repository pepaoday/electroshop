@{
    ViewData["Title"] = "Trang Chủ";
}
<style>
    body {
        background-color: #1a1a1a;
        color: #f8f9fa;
    }

    /* Nút màu đỏ tùy chỉnh */
    .btn-custom-red {
        background-color: #d9232d;
        border-color: #d9232d;
        color: white;
    }

    .btn-custom-red:hover {
        background-color: #b01c24;
        border-color: #a51a21;
        color: white;
    }


    #homeCarousel .carousel-item img {
        height: 500px;
        width: 100%;
        object-fit: contain;
        border-radius: 15px;
        background-color: #1a1a1a;
    }


    .filter-bar {
        background-color: #2c2c2c;
        padding: 1.5rem;
        border-radius: 15px;
        margin-bottom: 2.5rem;
    }

    .filter-bar .form-control {
        background-color: #3a3a3a;
        color: white;
        border: 1px solid #555;
    }

    .filter-bar .form-control::placeholder {
        color: #aaa;
    }

    .filter-bar .form-control:focus {
        background-color: #3a3a3a;
        color: white;
        border-color: #d9232d;
        /* Đổi màu focus sang đỏ */
        box-shadow: none;
    }

    /* Khu vực danh mục mới */
    .category-section {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
    }

    .category-link {
        text-align: center;
        display: inline-block;
        padding: 12px 30px;
        background-color: #2c2c2c;
        color: #f8f9fa;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color .2s ease-in-out, transform .2s ease-in-out;
    }

    .category-link:hover {
        background-color: #4a4a4a;
        transform: translateY(-3px);
        color: white;
    }

    /* Thẻ sản phẩm */
    .product-card {
        background-color: #2c2c2c;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform .2s ease-in-out, box-shadow .2s ease-in-out;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    }

    .product-card .card-img-top {
        height: 250px;
        object-fit: cover;
    }

    .product-card .card-body {
        padding: 1.25rem;
    }

    .product-card .card-title {
        text-align: center;
        color: #f8f9fa;
        font-weight: 500;
    }

    .product-card .card-text {
        color: #f8f9fa !important;
        
    }

    .product-card .text-muted {
        color: #f8f9fa !important; 
        font-size: 0.9rem;
        text-align: center;
    }

    .product-card .price {
        text-align: center;
        font-size: 1.25rem;
        font-weight: bold;
        color: #ffffff;
    }

    .product-card .action-buttons .btn {
        width: 100%;
        margin-bottom: 0.5rem;
    }

    /* Tiêu đề mục */
    .section-title {
        color: white;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
    }

    /* Thông báo */
    #orderSuccessAlert {
        transition: opacity 0.5s ease-in-out;
    }
</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="orderSuccessAlert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setTimeout(function () {
                var alertBox = document.getElementById('orderSuccessAlert');
                if (alertBox) {
                    alertBox.style.opacity = '0';
                    setTimeout(function () {
                        alertBox.style.display = 'none';
                    }, 500);
                }
            }, 1000);
        });
    </script>
}

<div id="homeCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Image/banner_1.png" class="d-block w-100" alt="Banner 1">
        </div>
        <div class="carousel-item">
            <img src="~/Image/banner_2.png" class="d-block w-100" alt="Banner 2">
        </div>
        <div class="carousel-item">
            <img src="~/Image/banner_3.png" class="d-block w-100" alt="Banner 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<div class="container mb-5">
    <h2 class="section-title">Khám Phá Danh Mục</h2>
    <div class="category-section">
        @foreach (var item in ViewBag.Categories as List<WebBanHang.Models.Category>)
        {
            <a asp-controller="Home" asp-action="ProductsByCategory" asp-route-categoryId="@item.Id" class="category-link">
                @item.Name
            </a>
        }
    </div>
</div>


<div class="container filter-bar">
    <form asp-controller="Home" asp-action="Index" method="get" class="row g-3 align-items-center">
        <div class="col-md-5">
            <input type="text" class="form-control" id="searchTerm" name="searchTerm"
                placeholder="Nhập tên sản phẩm để tìm kiếm..." value="@ViewBag.SearchTerm" />
        </div>
        <div class="col-md-5">
            <div class="row g-2 align-items-center">
                <div class="col"><input type="number" class="form-control" name="minPrice" placeholder="Giá từ"
                        value="@ViewBag.MinPrice" /></div>
                <div class="col-auto text-white">-</div>
                <div class="col"><input type="number" class="form-control" name="maxPrice" placeholder="đến"
                        value="@ViewBag.MaxPrice" /></div>
            </div>
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-custom-red">Áp dụng</button>
        </div>
    </form>
</div>


<div class="container">
    <h2 class="section-title">Sản Phẩm Nổi Bật</h2>
    <div class="row">
        @foreach (var product in ViewBag.Products as List<WebBanHang.Models.Product>)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card product-card h-100">
                    @if (product.ImageData != null && product.ImageData.Length > 0)
                    {
                        <img src="@Url.Action("GetProductImage", "Admin", new { id = product.Id })" class="card-img-top" alt="@product.Name" />
                    }
                    else if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/250" class="card-img-top" alt="Không có ảnh" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted small flex-grow-1">@product.Description</p>
                        <p class="price mb-3">@string.Format("{0:N0} VNĐ", product.Price)</p>
                        <div class="action-buttons mt-auto">
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id"
                                class="btn btn-custom-red">Thêm vào giỏ</a>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id"
                                class="btn btn-outline-light">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>